# ============================================================================
# GDI Backend Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values

# ── Voice Assistant Configuration ──────────────────────────────────────────

# Wake word for voice activation (default: "jarvis")
VOICE_WAKE_WORD=jarvis

# Speech recognition language (default: "en-US")
VOICE_LANGUAGE=en-US

# Listening timeout in seconds after wake word (default: 5)
VOICE_TIMEOUT=5

# Enable/disable text-to-speech feedback (true/false)
VOICE_TTS_ENABLED=true

# Porcupine wake word detection access key (optional, for better accuracy)
# Get your free key at: https://console.picovoice.ai/
PORCUPINE_ACCESS_KEY=

# ── OpenClaw Integration ────────────────────────────────────────────────────

# OpenClaw Gateway WebSocket URL (default: ws://127.0.0.1:18789)
OPENCLAW_GATEWAY_URL=ws://127.0.0.1:18789

# OpenClaw authentication token (if required)
OPENCLAW_AUTH_TOKEN=

# OpenClaw session ID for commands (default: "main")
OPENCLAW_SESSION_ID=main

# Auto-start OpenClaw integration on backend startup (true/false)
OPENCLAW_AUTO_CONNECT=false

# ── API Keys (for future AI integrations) ───────────────────────────────────

# Anthropic API Key (for Claude - if using direct API instead of OpenClaw)
# ANTHROPIC_API_KEY=

# OpenAI API Key (for GPT models - if using direct API)
# OPENAI_API_KEY=

# ── Backend Configuration ───────────────────────────────────────────────────

# Backend server host
BACKEND_HOST=0.0.0.0

# Backend server port
BACKEND_PORT=8000

# Enable debug logging (true/false)
DEBUG_MODE=false

# Camera index for gesture detection
CAMERA_INDEX=0

# ── Security ────────────────────────────────────────────────────────────────

# CORS allowed origins (comma-separated)
CORS_ORIGINS=*

# Maximum WebSocket connections
MAX_WS_CONNECTIONS=10
